<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultColorStyle">
        <item name="android:textColor">@color/primaryFont</item>
    </style>

    <style name="HeadlineH5" parent="DefaultColorStyle">
        <item name="android:fontFamily">@font/chelseamarket_regular</item>
        <item name="android:textSize">@dimen/text_size_headline_h5</item>
    </style>

    <style name="Body2" parent="DefaultColorStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_body_2</item>
    </style>

</resources>
